<div class="panel panel-default">
  <div class="panel-body">
    <div class="row">
      <div class="col-md-4">
        <%= image_tag @pen.image.url(:medium) %>
        <div class="table-responsive">
          <table class="table">
            <tbody>
              <tr>
                <td><strong>Name:</strong></td>
                <td><%= @pen.name %></td><br>
              </tr>
              <tr>
                <td><strong>Rating:</strong></td>
                <td><%= @pen.rating %></td><br>
              </tr>
              <tr>
                <td><strong>Description:</strong></td>
                <td><%= @pen.description %></td><br>
              </tr>
              <tr>
                <td><strong>Tip size:</strong></td>
                <td><%= @pen.tip_size %></td><br>
              </tr>
              <tr>
                <td><strong>Ink color:</strong></td>
                <td><%= @pen.ink_color %></td><br>
              </tr>
              <tr>
                <td><strong>Model no:</strong></td>
                <td><%= @pen.model_no %></td><br>
              </tr>
            </tbody>
          </table>
          <%= link_to "Write a Review!", new_pen_review_path(@pen) %>
        </div>
      </div>
      <div class="col-md-7 col-md-offset-1">
        <h1 class="review_title"><%= @pen.name %></h1>
        <p><%= @pen.description %></p>

        <% if @reviews.blank? %>
          <h3>so far no reviews, why don't you add one?</h3>
          <%= link_to "Add a Review", new_pen_review_path(@pen), class: "btn btn-danger" %>
        <% else %>
          <% @reviews.each do |review| %>
          <div class="reviews">
            <div class="star-rating" data-score= <%= review.rating %> ></div>
<!--             <p><%= review.rating %></p> -->
            <p><%= review.review %></p>
            <% end %>
        <% end %>
          </div>
      </div>
    </div>
  </div>
</div>

<%= link_to 'Edit', edit_pen_path(@pen) %> |
<%= link_to 'Back', pens_path %>

<script>
    $('.star-rating').raty({
      path: '/assets/',
      readOnly: true,
      score: function() {
            return $(this).attr('data-score');
    }
  });
</script>



